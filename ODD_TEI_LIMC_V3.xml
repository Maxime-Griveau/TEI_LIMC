                           <valItem ident="cousine"/>
                           <valItem ident="petit-cousin"/>
                           <valItem ident="petite-cousine"/>
                           <valItem ident="cousin-germain"/>
                           <valItem ident="cousine-germaine"/>

                        </valList>
                     </attDef>
                     <attDef ident="type" mode="delete"/>
                  </attList>
               </elementSpec>
